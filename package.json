{
  "name": "monorepo",
  "private": true,
  "packageManager": "pnpm@10.8.1",
  "scripts": {
    "dev": "pnpm --filter=\"./view\" dev & pnpm --filter=\"./server\" start",
    "build": "pnpm --filter=\"./view\" build && pnpm --filter=\"./server\" build",
    "start": "pnpm --filter=\"./server\" start",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "build:start": "pnpm build && pnpm start"
  }
}